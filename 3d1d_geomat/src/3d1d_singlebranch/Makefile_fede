CPPFLAGS=-I../../include -I$(mkGetfemInc)
CXXFLAGS=-std=c++14 -D=M3D1D_VERBOSE_

ifeq ($(DEBUG),yes)
  OPTFLAGS=-g -Wall
else
  OPTFLAGS=-O3 -march=native
  CPPFLAGS+=-DNDEBUG
endif
LDFLAGS=-L../../lib -L$(mkGetfemLib)

LIBRARIES=-lproblem3d1d -lgetfem -lblas

LINKLIBS := ../../lib/libproblem3d1d.a


SRCS=$(wildcard *.cpp)
OBJS=$(SRCS:.cpp=.o)
EXEC=M3D1D

OUTDIR=vtk

.PHONY: all clean distclean

all: library $(EXEC) 
	@echo
	@echo Compilation completed!

%.o: %.cpp $(LINKLIBS) 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) -o $@ -c $<

$(EXEC): $(OBJS) 
	$(CXX) $(LDFLAGS) -o $@ $(OBJS) $(LIBRARIES)

library:
	$(MAKE) -C ../../include

clean:
	$(RM) $(OBJS) $(EXEC) *~ *.log

distclean: clean
	$(RM) *.txt $(OUTDIR)/*
